{
  "name": "cheilgpt",
  "version": "1.0.0",
  "description": "CheilGPT - Local AI Chat Application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac --universal",
    "build:win": "electron-builder --win",
    "postinstall": "electron-builder install-app-deps"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "electron-store": "^8.1.0",
    "node-llama-cpp": "^3.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "typescript": "^5.3.2"
  },
  "build": {
    "appId": "com.cheil.gpt",
    "productName": "CheilGPT",
    "icon": "assets/IconCheilGPT.png",
    "mac": {
      "category": "public.app-category.utilities",
      "target": ["dmg", "zip"],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "icon": "assets/IconCheilGPT.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/IconCheilGPT.png"
    },
    "files": [
      "**/*",
      "!models/*",
      "!node_modules/@node-llama-cpp/**/*"
    ],
    "directories": {
      "buildResources": "resources",
      "output": "dist"
    },
    "extraResources": [
      {
        "from": "models",
        "to": "models",
        "filter": [
          "*.gguf"
        ]
      }
    ],
    "asarUnpack": [
      "node_modules/@node-llama-cpp/**/*"
    ]
  }
}
